<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/constraintLayout"
                                             android:paddingBottom="30dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/image1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/text_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image1" android:textSize="30sp"
            android:textColor="@android:color/white" android:layout_marginRight="24dp" android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/text_id"
            app:layout_constraintTop_toBottomOf="@+id/text_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_date" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.476" android:textColor="@android:color/holo_blue_dark"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/text_date"
            app:layout_constraintTop_toBottomOf="@+id/text_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp" android:layout_marginRight="108dp" android:layout_marginTop="8dp"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>